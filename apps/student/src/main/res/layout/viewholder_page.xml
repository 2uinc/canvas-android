<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/mainLayout"
    android:layout_marginEnd="58dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    style="@style/AdapterItem"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        style="@style/AdapterItemIcon"
        android:importantForAccessibility="no"
        tools:srcCompat="@drawable/ic_copy" />

    <LinearLayout
        android:id="@+id/textContainer"
        style="@style/AdapterItemTextContainer"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/AdapterItemTitleText"
            tools:text="Course Notification Title" />

        <TextView
            android:id="@+id/modified"
            style="@style/AdapterItemDescriptionText"
            android:text="@string/lastModified" />

    </LinearLayout>

</LinearLayout>

    <com.twou.offline.view.DownloadItemView
        android:id="@+id/downloadItemView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>